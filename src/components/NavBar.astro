<nav class="nav-container">
    <a href="/" class="brand">
        <img src="/icons/brand.svg" alt="伺服器圖示" class="brand">
    </a>
    <div class="nav-links">
        <a href="/introduction" class="nav-link"><span>活動介紹</span></a>
        <a href="/news" class="nav-link"><span>News</span></a>
        <a href="/calendar" class="nav-link"><span>時間表</span></a>
        <a href="/record" class="nav-link"><span>優勝記錄</span></a>
    </div>
</nav>
<style>
    .nav-container{
        height: 70px;
        padding: 10px 0px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-link{
        margin: 0 1.5rem;
        text-decoration: none;
        font-size: 1.2rem;
        font-weight: bolder;
        background: linear-gradient(to left, hsl(10, 21%, 95%) 50%, var(--shade-darken2) 50%) right;
        background-size: 200%;
        transition: .5s ease-in-out;
        background-clip: text;
        -webkit-background-clip: text;
        -moz-background-clip: text;
        -webkit-text-fill-color: transparent; 
        -moz-text-fill-color: transparent;
    }

    .nav-link:hover{
        background-position: left;
    }

    .brand{
        width: min(100%, 400px);
        margin: 0px 10px;
    }

    @media only screen and (max-width: 1000px) {
        .nav-container{
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
        }
        .brand{
            display: block;
            height: 40px;
        }

        .nav-links{
            width: 90%;
            display: inherit;
            justify-content: inherit;
            align-items: inherit;
            margin-top: 10px;
        }
        .nav-link{
            margin: 0;
            width: 100%;
            font-size: 1.2rem;
        }
        .nav-link > span{
            display: block;
            text-align: center;
        }
    }

    @keyframes rotate{
        from{
            transform: rotate(0);
            top: 30px;
        }
        to{
            transform: rotate(380deg);
            top: 15px;
        }
    }
</style>
